{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/favicon.ico",
    "target": [
      "nsis"
    ]
  },
  "extraResources": [
    {
      "from": "node_modules/regedit/vbs",
      "to": "regedit/vbs",
      "filter": [
        "**/*"
      ]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "teheidoma",
      "token": "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",
      "repo": "honkai-importer-electron"
    }
  ]
}
